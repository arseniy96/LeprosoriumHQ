<div style="font-family: Georgia; width: 80%">
<h4>Post details</h4>

<div style="background-color: #fff5c2; padding: 15px; border-radius: 10px 0px;">
  <%= @post.content %>
  <br>
  <br>
  <p>Написал <%= @post.username %> <%= @post.created_at %></p>
</div>
<hr>
<br>
<div style="padding: 15px;">
  <h4>Comments:</h4>
  <br>

  <% @comments.each do |com| %>
    <p>
    <%= com['content'] %>
    </p>
    <p>
      <span style="font-size: 75%; color: #999">Написал <%=com['username'] %> <%= com['created_at'] %></span>
    </p>
    <hr>
  <% end %>

  <form action="/comments/<%= @post.id %>" method="POST" role="form">

    <div class="form-group">
      <textarea class="form-control" rows="4" name="comments[content]" placeholder="Напиши комментарий!"><%= @comment.content %></textarea>
    </div>
    <div class="form-group" style="width: 40%">
      <input value="<%= @comment.username %>" type="text" class="form-control" name="comments[username]" id="exampleInputEmail2" placeholder="Ваш логин">
    </div>

    <button type="submit" class="btn btn-primary">YARRR!</button>
  </form>
</div>

</div>