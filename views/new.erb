<head>
  <link rel="stylesheet" type="text/css" href="main.css">
</head>
<body>
<h2>Add New Post</h2>

<form action="/new" method="POST" role="form">

  <div class="form-group">
    <textarea class="form-control" rows="5" name="post[content]" placeholder="Ну давай, что накипело?"><%= @new.content %></textarea>
  </div>
  <div class="form-group" style="width: 40%">
    <input type="text" class="form-control" name="post[username]"  value="<%= @new.username %>" placeholder="%username%">
  </div>

  <button type="submit" class="btn btn-primary">YARRR!</button>
</form>

</body>

